# Django
# A Secret Key pode ser a padrão do local.py, mas é bom ter o arquivo
DJANGO_SECRET_KEY=YOUR_SECRET_KEY
# A DATABASE_URL é construída pelo entrypoint, mas o DJANGO_SETTINGS_MODULE é importante
DJANGO_SETTINGS_MODULE=core.settings.local
# Necessário para a lógica do INTERNAL_IPS no local.py
USE_DOCKER=yes

IPYTHONDIR=/app/.ipython


# Postgtres
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=api-flix
POSTGRES_USER=YOUR_DB_USER
POSTGRES_PASSWORD=YOUR_DB_PASSWORD

DATABASE_URL="postgres://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}"
